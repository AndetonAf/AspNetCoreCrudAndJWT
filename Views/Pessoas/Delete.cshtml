@model Comeia.Models.Pessoa

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Full_name)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Full_name)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Birth_date)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Birth_date)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-8">
            @{
                string gender = "";
                if (Model.Gender == 0)
                {
                    gender = "Não Declarado";
                }
                else if (Model.Gender == 1)
                {
                    gender = "Masculino";
                }
                else if (Model.Gender == 2)
                {
                    gender = "Feminino";
                }
                else
                {
                    gender = "Prefiro não declarar";
                }
            }
            @Html.DisplayFor(model => gender)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista</a>
    </form>
</div>
