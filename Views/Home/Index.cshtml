@model Comeia.Models.Auth

@{
    ViewData["Title"] = "Login";
    ViewData["BackGround"] = "background: #e6ecf3;";
    ViewData["sair"] = "null";
}

<!-- Container start -->
<div class="container" style="margin-top: 15%;">
    <form asp-action="Login">
        <div class="row justify-content-md-center">
            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-12">
                <div class="login-screen">
                    @*@if (!String.IsNullOrEmpty(@Model.Resposta))
                        {
                        <div class="alert alert-danger" role="alert">
                            @Model.Resposta
                        </div>
                        }*@
                    <div class="login-box">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Username" type="text" class="form-control" placeholder="Usuario" />
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Senha" />
                        </div>
                        <div class="actions">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>
<!-- Container end -->
